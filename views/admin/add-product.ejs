<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/product.css">
    <link rel="stylesheet" href="/css/shop.css" />
    <link rel="stylesheet" href="/css/cart.css" />
  </head>

  <body>
    <%- include('../includes/navigation.ejs') %>

    <main>
      <form class="product-form" action="/add-product" method="POST" enctype="multipart/form-data">
        <p style="color: red;"><%= errorMessage %></p>
        <input type="hidden" name="_csrf" value="<%= _csrf %>">
        <div class="form-control">
          <label for="title">Title</label>
          <input 
            type="text" 
            name="title" 
            id="title" 
            value="<%= oldInput ? oldInput.title : '' %>" 
          />
        </div>
        <!-- <div class="form-control">
          <label for="imageUrl">Image URL</label>
          <input 
            type="text" 
            name="imageUrl" 
            id="imageUrl" 
            value="<%= oldInput ? oldInput.imageUrl : '' %>" 
          />
        </div> -->
        <div class="form-control">
          <label for="image">Image</label>
          <input 
            type="file" 
            name="image" 
            id="image" 
          />
        </div>
        <div class="form-control">
          <label for="price">Price</label>
          <input 
            type="number" 
            name="price" 
            id="price" 
            step="0.01" 
            value="<%= oldInput ? oldInput.price : '' %>" 
          />
        </div>
        <div class="form-control">
          <label for="description">Description</label>
          <textarea 
            type="text" 
            name="description" 
            id="description" 
            rows="5"
          ><%= oldInput ? oldInput.description : '' %></textarea>
        </div>

        <button type="submit">Add Product</button>
      </form>
    </main>
<%- include('../includes/end.ejs') %>