<%- include('includes/head.ejs') %>
    <link rel="stylesheet" href="/css/shop.css" />
  </head>

  <body>
    <%- include('includes/navigation.ejs') %>

    <% if (prods.length > 0) { %>
      <main>
        <h1>My Products</h1>
        <p>List of all the products...</p>
        <ul>
          <% for (let product of prods) { %>
            <li>
              <img
                src="https://ix-marketing.imgix.net/case-study-image_chronext.png?auto=format,compress&w=1074"
                alt="product-watch"
                class="product-image"
              />
              <div class="product-details">
                <h2 class="product-title"><%= product.title %></h2>
                <p class="product-price">$19.99</p>
                <p class="product-description">This is a luxurious watch of the CR7 brand</p>
                <a href="#" class="add-to-cart-btn">Add to Cart</a>
              </div>
            </li>
          <% } %>
        </ul>
      </main>
    <% } else { %>
      <h2>No Products</h2>
      <p>Sorry, there are no products available at the moment.</p>
    <% } %>
<%- include('includes/end.ejs') %>
